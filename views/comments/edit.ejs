<% include ../partials/header %>
<div style="margin-top: 50px">
  <header class="jumbotron">
    <h2>Edit Comment</h2>
  </header>

  <div style="width: 50%; display: inline-flex;">
    <form
      action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"
      method="POST"
      style="width: 100%"
    >
      <input
        style="margin:5px"
        class="form-control"
        type="text"
        value="<%= comment.text %>"
        name="comment[text]"
      />
      <button style="margin:5px" class="btn btn-success btn-lg">
        Save Edit
      </button>
    </form>
  </div>
</div>
<% include ../partials/footer %>
