<% include ../partials/header %>

<div class="container" style="margin-top: 50px">
  <header class="jumbotron">
    <h2>Campgrounds List</h2>
    <a href="/campgrounds/new" class="btn-primary btn btn-lg">Add New</a>
  </header>

  <div class="row" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6  p-3">
      <div class="thumbnail">
        <img src="<%= campground.image %>" width="200" height="150" />
        <div class="caption text-center">
          <h5><%= campground.name %></h5>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-success"
            >More Info</a
          >
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</div>
<a href="/">Voltar</a>

<% include ../partials/footer %>
