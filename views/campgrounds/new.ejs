<% include ../partials/header %>
<div style="margin-top: 50px; text-align: center;">
  <header class="jumbotron">
    <h2>Add new Campground</h2>
  </header>

  <div style="width: 50%; display: inline-flex;">
    <form action="/campgrounds" method="POST" style="width: 100%">
      <input
        style="margin:5px"
        class="form-control"
        type="text"
        placeholder="Name"
        name="name"
      />
      <input
        style="margin:5px"
        class="form-control"
        type="number"
        placeholder="Price"
        name="price"
        min="0"
        step="0.01"
        required
      />
      <input
        style="margin:5px"
        class="form-control"
        type="text"
        placeholder="Location"
        name="location"
      />
      <input
        style="margin:5px"
        class="form-control"
        type="text"
        placeholder="description"
        name="description"
      />
      <input
        style="margin:5px"
        class="form-control"
        type="text"
        placeholder="Image URL"
        name="image"
      />
      <button style="margin:5px" class="btn btn-success btn-lg">
        Add new!
      </button>
    </form>
  </div>
</div>
<% include ../partials/footer %>
